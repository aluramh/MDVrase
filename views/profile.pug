extends common/layout

block content

    div.container
        div.page-header.text-center
            h1 #[span.fa.fa-anchor] Profile page
                        
        div.row
            div.col-sm-6
                div.well
                    h3 #[span.fa.fa-user] Local
                    div.row
                        div.col-md-12
                            table.table.table-bordered.table-hover
                                thead
                                    tr.custom-trow
                                        th.vertical-aligned-trow ID de usuario
                                        td #{user.id_usuario}
                                    tr.custom-trow
                                        th.vertical-aligned-trow Username
                                        td #{user.username}
                                    tr.custom-trow
                                        th.vertical-aligned-trow Password
                                        td #{user.password}
                                    tr.custom-trow
                                        th.vertical-aligned-trow Nombre
                                        td #{user.nombre}
                                    tr.custom-trow
                                        th.vertical-aligned-trow Empresa
                                        td #{user.nombre_empresa}
                                    tr.custom-trow
                                        th.vertical-aligned-trow Rol        
                                        td #{user.nombre_rol}
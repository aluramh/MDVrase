extends common/layout

block content
    div.container
        div.col-sm-6.col-sm-offset-3
            h1 #[span.fa.fa-sign-in] Signup
            //- Show authentication messages
            if message.length > 0
                div.alert.alert-danger #{message}

            //- Signup form
            form(action="/signup", method="post")
                include forms/signupForm

                button.btn.btn-warning.btn-lg(type="submit") Sign up

                hr
                p Already have an account?
                    a(href="/login") &nbsp;Login
                p Or go
                    a(href="/") &nbsp;home
                    span .
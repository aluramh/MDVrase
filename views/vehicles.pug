extends common/layout

block content
    h1.page-header.text-center Busqueda de vehiculos
    div.row
        div.col-md-3
            p.lead Filtros
            div.list-group
                a.list-group-item(href="#") Category 1
                a.list-group-item(href="#") Category 2
                a.list-group-item(href="#") Category 3
        div.col-md-9
            div.row
                each vehicle in vehicles
                    div.col-sm-6.col-md-4.col-lg-4
                        div.thumbnail(redirect = "/vehicles/" + vehicle.id_carro)
                            img.thumbnail-image(src="/uploads/" + (vehicle.foto_vehiculo != null ? vehicle.foto_vehiculo : "/no_image.jpg"))

                            div.caption
                                div.row.nombre-carro
                                    div.col-md-8
                                        span #{vehicle.modelo} #{vehicle.color} #{vehicle.year} (#{vehicle.num_placa})
                                    div.col-md-4.aright.hidden-xs.hidden-sm
                                        span.marca-carro #{vehicle.nombre_empresa}
                                    div.col-md-4.hidden-md.hidden-lg
                                        span.marca-carro #{vehicle.nombre_empresa}

                                p.description 
                                    if vehicle.descripcion == null
                                        span No hay descripci√≥n disponible.
                                    else
                                        span #{vehicle.descripcion}

block additionalScripts
    script(src="/js/vehicleListPage.js")
extends common/layout

block content
    div.row
        div.col-md-3
            p.lead Filtros
            div.list-group
                a.list-group-item(href="#") Category 1
                a.list-group-item(href="#") Category 2
                a.list-group-item(href="#") Category 3
        div.col-md-9
            div.row
                each vehicle in vehicles
                    div.col-sm-6.col-lg-6.col-md-6
                        div.thumbnail(redirect = "/vehicles/" + vehicle.id_carro)
                            img.thumbnail-image(src="/uploads/" + (vehicle.foto_vehiculo != null ? vehicle.foto_vehiculo : "/no_image.jpg"))

                            div.caption
                                h4.pull-right.marca-carro #{vehicle.nombre_marca}
                                h4 #{vehicle.modelo} #{vehicle.color} #{vehicle.year}
                                p 
                                    strong #{vehicle.nombre_empresa}
                                    br
                                    span #{vehicle.num_placa}
                                    br
                                    if vehicle.descripcion == null
                                        i No hay descripci√≥n disponible.
                                    else
                                        i #{vehicle.descripcion}

block additionalScripts
    script(src="/js/vehicleListPage.js")